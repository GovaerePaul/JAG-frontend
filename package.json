{
  "name": "jag-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:pages": "next build --turbopack",
    "build:mobile": "cross-env CAPACITOR_BUILD=true next build && npx cap sync",
    "build:desktop": "next build && next export",
    "start": "next start",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "cap:android": "npx cap add android",
    "cap:ios": "npx cap add ios && npx cap open ios",
    "cap:sync": "npx cap sync",
    "cap:syncopenandroid": "npx cap sync && npx cap open android",
    "electron": "electron electron/main.js",
    "electron:dev": "cross-env NODE_ENV=development electron electron/main.js",
    "electron:build": "npm run build:desktop && electron-builder",
    "electron:dist": "npm run build:desktop && electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "@reduxjs/toolkit": "^2.2.7",
    "firebase": "^12.7.0",
    "next": "^16.1.1",
    "next-intl": "^4.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-redux": "^9.1.2"
  },
  "overrides": {
    "@capacitor-firebase/authentication": {
      "firebase": "$firebase"
    },
    "@capacitor-firebase/app-check": {
      "firebase": "$firebase"
    },
    "minimatch": "^10.2.1",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@capacitor-firebase/app-check": "^8.0.0",
    "@capacitor-firebase/authentication": "^8.0.0",
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "cross-env": "^10.1.0",
    "electron": "^38.7.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.justgift.app",
    "productName": "JustGift",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
